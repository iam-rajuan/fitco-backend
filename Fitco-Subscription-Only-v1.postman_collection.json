{
  "info": {
    "name": "Fitco Subscription Only API v1",
    "description": "Subscription-related APIs only (user + admin): plans, quote, checkout session, webhook reference, admin pricing, coupon management, and admin subscription listing.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "01 - User Subscription",
      "item": [
        {
          "name": "Get Plans",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/subscriptions/plans",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "subscriptions",
                "plans"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Quote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userAccessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"monthly\",\n  \"couponCode\": \"WELCOME10\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/subscriptions/quote",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "subscriptions",
                "quote"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Checkout Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userAccessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"monthly\",\n  \"couponCode\": \"WELCOME10\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/subscriptions/checkout-session",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "subscriptions",
                "checkout-session"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Create Subscription (Alias)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userAccessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"planType\": \"yearly\",\n  \"couponCode\": \"WELCOME10\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/subscriptions",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "subscriptions"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "02 - Admin Subscription Pricing",
      "item": [
        {
          "name": "Get Subscription Pricing",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/dashboard/subscription-pricing",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "dashboard",
                "subscription-pricing"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Subscription Pricing",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"monthlyPriceCents\": 999,\n  \"yearlyPriceCents\": 9999,\n  \"currency\": \"usd\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/dashboard/subscription-pricing",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "dashboard",
                "subscription-pricing"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "03 - Admin Coupons",
      "item": [
        {
          "name": "Create Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"WELCOME10\",\n  \"discountPercentage\": 10,\n  \"expiryDate\": \"2027-12-31T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupons",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "coupons"
              ]
            }
          },
          "response": []
        },
        {
          "name": "List Coupons",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupons",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "coupons"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Coupon",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"discountPercentage\": 15,\n  \"expiryDate\": \"2028-01-31T23:59:59.000Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupons/{{couponId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "coupons",
                "{{couponId}}"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Toggle Coupon Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupons/{{couponId}}/status",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "coupons",
                "{{couponId}}",
                "status"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete Coupon",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/coupons/{{couponId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "coupons",
                "{{couponId}}"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "04 - Admin Subscription Management",
      "item": [
        {
          "name": "List Subscriptions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/subscriptions?page=1&limit=20",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "subscriptions"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Subscription Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/subscriptions/{{subscriptionId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "subscriptions",
                "{{subscriptionId}}"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "05 - Stripe Webhook (Reference)",
      "item": [
        {
          "name": "Webhook Endpoint",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "stripe-signature",
                "value": "{{stripeWebhookSignature}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": \"evt_test_webhook\",\n  \"object\": \"event\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/subscriptions/webhook",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "v1",
                "subscriptions",
                "webhook"
              ]
            },
            "description": "Use Stripe CLI for real testing: stripe listen --forward-to http://localhost:5000/api/v1/subscriptions/webhook"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "userAccessToken",
      "value": ""
    },
    {
      "key": "adminAccessToken",
      "value": ""
    },
    {
      "key": "couponId",
      "value": ""
    },
    {
      "key": "subscriptionId",
      "value": ""
    },
    {
      "key": "stripeWebhookSignature",
      "value": "t=0,v1=replace_with_real_signature"
    }
  ]
}
