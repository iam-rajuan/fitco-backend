{
  "info": {
    "name": "Creedtng Auth OTP Flow",
    "description": "Postman collection to test forgot-password OTP flow.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "email", "value": "quantumerrors@gmail.com" },
    { "key": "otp", "value": "123456" },
    { "key": "newPassword", "value": "NewStrongPass123!" }
  ],
  "item": [
    {
      "name": "Auth OTP Password Reset",
      "item": [
        {
          "name": "1. Forgot Password (Send OTP)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/forgot-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "forgot-password"]
            },
            "description": "Triggers OTP email to user."
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"message\": \"If the email exists, reset instructions were sent\"\n}"
            }
          ]
        },
        {
          "name": "2. Verify Reset OTP",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"otp\": \"{{otp}}\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify-reset-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify-reset-otp"]
            },
            "description": "Verifies OTP before resetting password."
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"message\": \"OTP verified\"\n}"
            }
          ]
        },
        {
          "name": "3. Reset Password (Using OTP)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"otp\": \"{{otp}}\",\n  \"password\": \"{{newPassword}}\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/reset-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "reset-password"]
            },
            "description": "Resets password after OTP verification."
          },
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"message\": \"Password updated\"\n}"
            }
          ]
        },
        {
          "name": "4. Login With New Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json", "type": "text" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{newPassword}}\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Confirms reset worked. Stores user token.",
            "auth": {
              "type": "noauth"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const d = pm.response.json();",
                  "if (d.accessToken) pm.environment.set('userToken', d.accessToken);"
                ]
              }
            }
          ],
          "response": [
            {
              "name": "Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"user\": {\n    \"id\": \"65f0...\",\n    \"email\": \"{{email}}\",\n    \"role\": \"user\"\n  },\n  \"accessToken\": \"ey...\",\n  \"refreshToken\": \"ey...\"\n}"
            }
          ]
        }
      ]
    }
  ]
}
